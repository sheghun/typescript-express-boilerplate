{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "paths": {
      "@daos/*": [
        "src/daos/*"
      ],
      "@entities/*": [
        "src/entities/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],
      "@server": [
        "src/Server"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "spec/**/*.ts",
    ".eslintrc.js"
  ],
  "exclude": [
    "src/public/"
  ]
}